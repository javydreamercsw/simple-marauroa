<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="SimplePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>simple.server.core.engine.db.persistence.Account</class>
    <class>simple.server.core.engine.db.persistence.AccountBan</class>
    <class>simple.server.core.engine.db.persistence.AccountLink</class>
    <class>simple.server.core.engine.db.persistence.BanList</class>
    <class>simple.server.core.engine.db.persistence.Character</class>
    <class>simple.server.core.engine.db.persistence.GameEvent</class>
    <class>simple.server.core.engine.db.persistence.LoginEvent</class>
    <class>simple.server.core.engine.db.persistence.LoginSeed</class>
    <class>simple.server.core.engine.db.persistence.PasswordChange</class>
    <class>simple.server.core.engine.db.persistence.RPObject</class>
    <class>simple.server.core.engine.db.persistence.RPZone</class>
    <class>simple.server.core.engine.db.persistence.Statistic</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/marauroa"/>
      <property name="javax.persistence.jdbc.password" value="password"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="simple_user"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <property name="eclipselink.logging.logger" value="org.eclipse.persistence.logging.DefaultSessionLog"/>
      <property name="eclipselink.logging.level" value="SEVERE"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="SimplePU-Embedded" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>simple.server.core.engine.db.persistence.Account</class>
    <class>simple.server.core.engine.db.persistence.AccountBan</class>
    <class>simple.server.core.engine.db.persistence.AccountLink</class>
    <class>simple.server.core.engine.db.persistence.BanList</class>
    <class>simple.server.core.engine.db.persistence.Character</class>
    <class>simple.server.core.engine.db.persistence.GameEvent</class>
    <class>simple.server.core.engine.db.persistence.LoginEvent</class>
    <class>simple.server.core.engine.db.persistence.LoginSeed</class>
    <class>simple.server.core.engine.db.persistence.PasswordChange</class>
    <class>simple.server.core.engine.db.persistence.RPObject</class>
    <class>simple.server.core.engine.db.persistence.RPZone</class>
    <class>simple.server.core.engine.db.persistence.Statistic</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:h2:~/marauroa"/>
      <property name="javax.persistence.jdbc.password" value="password"/>
      <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
      <property name="javax.persistence.jdbc.user" value="simple_user"/>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
      <property name="eclipselink.logging.logger" value="org.eclipse.persistence.logging.DefaultSessionLog"/>
      <property name="eclipselink.logging.level" value="SEVERE"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="TestSimplePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>simple.server.core.engine.db.persistence.Account</class>
    <class>simple.server.core.engine.db.persistence.AccountBan</class>
    <class>simple.server.core.engine.db.persistence.AccountLink</class>
    <class>simple.server.core.engine.db.persistence.BanList</class>
    <class>simple.server.core.engine.db.persistence.Character</class>
    <class>simple.server.core.engine.db.persistence.GameEvent</class>
    <class>simple.server.core.engine.db.persistence.LoginEvent</class>
    <class>simple.server.core.engine.db.persistence.LoginSeed</class>
    <class>simple.server.core.engine.db.persistence.PasswordChange</class>
    <class>simple.server.core.engine.db.persistence.RPObject</class>
    <class>simple.server.core.engine.db.persistence.RPZone</class>
    <class>simple.server.core.engine.db.persistence.Statistic</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/marauroa_test"/>
      <property name="javax.persistence.jdbc.password" value="password"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="simple_user"/>
      <property name="eclipselink.logging.logger" value="org.eclipse.persistence.logging.DefaultSessionLog"/>
      <property name="eclipselink.logging.level" value="OFF"/>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
